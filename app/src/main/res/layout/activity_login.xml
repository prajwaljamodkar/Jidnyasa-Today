<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7F8"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- App Icon -->
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:backgroundTint="#EAF2FD">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="1dp"
                android:src="@drawable/logo"
                android:contentDescription="App Logo"
                android:scaleType="centerInside"
                app:tint="#4B91E2" />

        </androidx.cardview.widget.CardView>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Welcome to Jidnyasa"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#1F2937" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Learning Through Curiosity"
            android:textSize="14sp"
            android:textColor="#6B7280" />

        <!-- Login Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MOBILE NUMBER"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#9CA3AF"
                    android:letterSpacing="0.08" />

                <!-- Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#F1F5F9"
                    android:paddingHorizontal="16dp"
                    android:clipToPadding="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#6B7280" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="24dp"
                        android:layout_marginHorizontal="12dp"
                        android:background="#CBD5E1" />

                    <EditText
                        android:id="@+id/phoneNumberInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="0000000000"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:background="@android:color/transparent"
                        android:textSize="16sp"
                        android:textColor="#1F2937"
                        android:textColorHint="#9CA3AF" />
                </LinearLayout>

                <!-- Helper -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="A 6-digit OTP will be sent for verification."
                    android:textSize="11sp"
                    android:textColor="#9CA3AF" />

                <!-- Button -->
                <Button
                    android:id="@+id/getOtpButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="20dp"
                    android:text="Send OTP"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#4B91E2" />

                <!-- Staff Login -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Are you a teacher?"
                        android:textSize="14sp"
                        android:textColor="#6B7280" />

                    <TextView
                        android:id="@+id/staffLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Staff Login"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#4B91E2" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Footer -->
        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="By continuing, you agree to follow Jidnyasa's school communication policies and privacy terms. Data charges may apply for SMS."
            android:textSize="10sp"
            android:textColor="#9CA3AF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Ver 2.4.0  â€¢  Help Center"
            android:textSize="10sp"
            android:textColor="#CBD5E1" />


    </LinearLayout>
</ScrollView>